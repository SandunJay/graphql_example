type Query {
    user(id: ID!): User
}

type Mutation {
    createPost(title: String!, content: String!, authorId: ID!): Post
    updateUser(id: ID!, name: String!): User
}

type User {
    id: ID!
    name: String!
    posts: [Post]
}

type Post {
    id: ID!
    title: String!
    content: String!
    author: User
}
